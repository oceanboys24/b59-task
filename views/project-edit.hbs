<form action="/project-edit/{{project.id}}" method="post">
  <div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="card">
          <div class="card-header">
            <h1 class="fs-5 mb-0">Edit Project</h1>
          </div>
          <div class="card-body">
            <div class="container p-3">
              <!-- Project Name -->
              <div class="mb-3 p-2">
                <label
                  for="projectName"
                  class="form-label fw-semibold fs-5"
                >Project Name</label>
                <input
                  value="{{project.name}}"
                  type="text"
                  name="ProjectName"
                  class="form-control"
                  id="projectName"
                  placeholder="Project Name"
                />
              </div>

              <!-- Date -->
              <div class="d-flex gap-3 justify-content-between w-100 p-2 mb-3">
                <div class="mb-3 w-100">
                  <label
                    for="startDateInput"
                    class="form-label fw-semibold fs-5"
                  >Start Date</label>
                  <input
                    type="date"
                    class="form-control"
                    id="startDateInput"
                    name="StartDate"
                  />
                </div>
                <div class="mb-3 w-100">
                  <label
                    for="endDateInput"
                    class="form-label fw-semibold fs-5"
                  >End Date</label>
                  <input
                    type="date"
                    class="form-control"
                    id="endDateInput"
                    name="EndDate"
                  />
                </div>
              </div>

              <!-- Message -->
              <div class="p-2 mb-3">
                <label
                  for="description"
                  class="form-label fw-semibold fs-5"
                >Description</label>
                <textarea
                  name="Description"
                  class="form-control"
                  placeholder="Description"
                  id="description"
                >{{project.description}}</textarea>
              </div>

              <!-- Checkbox -->
              <div class="container p-2 mb-3">
                <label
                  for="technologies"
                  class="form-label fw-semibold fs-5"
                >Technologies</label>
                <div class="row row-cols-1 row-cols-md-2 g-2 p-2">
                  <div class="form-check">
                    <input
                      class="form-check-input"
                      type="checkbox"
                      value="lni lni-react"
                      name="Stack"
                      id="reactCheck"
                    />
                    <label class="form-check-label" for="reactCheck">React JS</label>
                  </div>
                  <div class="form-check">
                    <input
                      class="form-check-input"
                      type="checkbox"
                      value="lni lni-nextjs"
                      name="Stack"
                      id="nextCheck"
                    />
                    <label class="form-check-label" for="nextCheck">Next JS</label>
                  </div>
                  <div class="form-check">
                    <input
                      class="form-check-input"
                      type="checkbox"
                      value="lni lni-typescript"
                      name="Stack"
                      id="tsCheck"
                    />
                    <label
                      class="form-check-label"
                      for="tsCheck"
                    >Typescript</label>
                  </div>
                  <div class="form-check">
                    <input
                      class="form-check-input"
                      type="checkbox"
                      value="lni lni-nodejs"
                      name="Stack"
                      id="nodeCheck"
                    />
                    <label class="form-check-label" for="nodeCheck">Node JS</label>
                  </div>
                </div>
              </div>

              <!-- Upload Image Form -->
              <div class="mb-3 p-2">
                <label
                  for="uploadImage"
                  name=""
                  class="form-label fw-semibold fs-5"
                >Upload Image</label>
                <input class="form-control" type="file" id="uploadImage" name="Image"/>
              </div>
            </div>
          </div>
          <div class="card-footer">
            <div class="d-flex justify-content-end gap-2">
              <a href="/projects" class="btn btn-secondary">Cancel</a>
              <button type="submit" class="btn btn-primary">Save Changes</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

</form>