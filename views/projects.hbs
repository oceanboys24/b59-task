<!-- Modal Create -->
<div
  class="modal fade"
  id="createModal"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5">Create A New Project</h1>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <div class="container p-3">
          <!-- Project Name -->
          <div class="mb-3 p-2">
            <label for="projectName" class="form-label fw-semibold fs-5">Project
              Name</label>
            <input
              type="text"
              class="form-control"
              id="projectName"
              placeholder="Project Name"
            />
          </div>
          <!-- Date -->
          <div class="d-flex gap-3 justify-content-between w-100 p-2 mb-3">
            <div class="mb-3 w-100">
              <label
                for="startDateInput"
                class="form-label fw-semibold fs-5"
              >Start Date</label>
              <input type="date" class="form-control" id="startDateInput" />
            </div>
            <div class="mb-3 w-100">
              <label for="endDateInput" class="form-label fw-semibold fs-5">End
                Date</label>
              <input type="date" class="form-control" id="endDateInput" />
            </div>
          </div>
          <!-- Message -->
          <div class="p-2 mb-3">
            <label
              for="description"
              class="form-label fw-semibold fs-5"
            >Description</label>
            <textarea
              class="form-control"
              placeholder="Description"
              id="description"
            ></textarea>
          </div>
          <!-- Checbox -->
          <div class="container p-2 mb-3">
            <label
              for="technologies"
              class="form-label fw-semibold fs-5"
            >Technologies</label>
            <div class="row row-cols-1 row-cols-md-2 g-2 p-2">
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="checkbox"
                  value=""
                  id="flexCheckDefault"
                />
                <label class="form-check-label" for="flexCheckDefault">
                  React JS
                </label>
              </div>
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="checkbox"
                  value=""
                  id="flexCheckChecked"
                />
                <label class="form-check-label" for="flexCheckChecked">
                  Next JS
                </label>
              </div>
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="checkbox"
                  value=""
                  id="flexCheckDefault"
                />
                <label class="form-check-label" for="flexCheckDefault">
                  Typescript
                </label>
              </div>
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="checkbox"
                  value=""
                  id="flexCheckChecked"
                />
                <label class="form-check-label" for="flexCheckChecked">
                  Node JS
                </label>
              </div>
            </div>
          </div>
          <!-- Upload Image Form  -->
          <div class="mb-3 p-2">
            <label for="uploadImage" class="form-label fw-semibold fs-5">
              Upload Image</label>
            <input class="form-control" type="file" id="uploadImage" />
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          Close
        </button>
        <button type="button" class="btn btn-primary">
          Create Project
        </button>
      </div>
    </div>
  </div>
</div>
